@model IEnumerable<TinTuc.Models.DMBanTin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-uppercase mt-3 mb-3">Quản lý danh mục</h2>
<p>
    @Html.ActionLink("Tạo mới", "Create", "Category", null, new { @class="btn btn-outline-primary" })
</p>
<hr />
<div class="container-fluid">
    <div class="col">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <table class="table">
                    <tr>
                        <th>
                            Mã Danh mục
                        </th>
                        <th>
                            Tên Danh mục
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenDM)
                            </td>
                            <td>
                                @using(Html.BeginForm($"Delete/{item.ID}", "Category"))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="submit" value="Xoá danh mục" class="btn btn-outline-danger" />
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
</div>